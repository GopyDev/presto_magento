if(!function_exists('t_to_h')){
	function t_to_h($hr){
		//check if its more than hrs
		$hr = number_format($hr, 2);
		if(strstr($hr, '.')){
			$t = explode('.', $hr);
			$s = (60 / 100) * $t[1];
			if($s >= 60){
				$td = $s - 60; 
				$ht = $t[0] + 1;
				
				if($td < 10){
					$td = "0".ltrim($td, '0');
				}
				if($ht < 10){
					$ht = "0".ltrim($ht, '0');
				}
				$ft = $ht.':'.$td;
			}else{
				$td = $s;
				if($s < 10){
					$td = "0".ltrim($s, '0');
				}
				$ht = $t[0];
				if($t[0] < 10){
					$ht = "0".ltrim($t[0], '0');
				}
				$ft = $ht.':'.$td;
			}
		}else{
			if($hr < 10){
				$hr = "0".ltrim($hr, '0');
			}
			$ft = $hr.":00";
		}
		return date('h:ia', strtotime($ft));
	}
}
