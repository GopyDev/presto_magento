var cart_running = false;

function addtocart(product_id, qty, i){ 
//alert("add");

	if(qty == 0 || qty == '') return false;
	if(!cart_running){
		cart_running = true;
		
		jQuery(i).before("<span class='cart_loader' id='cart_loader'><span class='spinner'></span>Please Wait</span>");
