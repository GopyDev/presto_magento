function incr(i, id){

	qty_box = jQuery('#'+id);

	qty = parseInt(jQuery(qty_box).val());
	if(i == 'i'){
	jQuery(qty_box).val((qty+1));

	}
	if(i == 'd'){
		if(qty > 1){
			jQuery(qty_box).val((qty-1));
		}
	}

}
